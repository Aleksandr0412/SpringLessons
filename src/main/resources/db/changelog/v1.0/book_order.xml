<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="1" author="Aleksandr Petrov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="book_order"/>
            </not>
        </preConditions>

        <createTable tableName="book_order"
                     remarks="Связующая таблица заказа и книг">
            <column name="book_id" type="uuid"
                    remarks="Идентификатор книги">
                <constraints primaryKey="true"
                             primaryKeyName="book_pk"
                             foreignKeyName="order_fk"
                             referencedTableName="books"
                             referencedColumnNames="id"
                             nullable="false"/>
            </column>
            <column name="order_id" type="uuid"
                    remarks="Идентификатор книги">
                <constraints primaryKey="true"
                             primaryKeyName="order_pk"
                             foreignKeyName="order_fk"
                             referencedTableName="orders"
                             referencedColumnNames="id"
                             nullable="false"/>
            </column>
            <column name="name" type="varchar(255)" remarks="ФИО автора">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <comment>Задача по созданию связующей таблицы книг и заказов</comment>
    </changeSet>

</databaseChangeLog>